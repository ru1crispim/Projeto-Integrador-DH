<%- include('../partials/head') %>
<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/view/clientes/style-regClients.css">;
<body>

    <div class="marioBowser">
        <img src="/img/GIFs/mario.gif" alt="" id="mario">
        <img src="/img/GIFs/bowser-dancing.gif" alt="" id="bowser">
    </div>
    


    <main>

        
        <div class="formCustomer">
        <h1>Cadastro de Clientes</h1>
        <form action="/clientes/cadastrar" method="post" >
        
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome"/>
            <br>
                
            <label for="sobrenome">Sobrenome:</label>
            <input type="text" id="sobrenome" name="sobrenome" />
            <br>
        
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" />
            <br>
    
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" />
            <br>
        
            <label for="telefone">Telefone:</label>
            <input type="text" id="telefone" name="telefone" />
            <br>
        
            <label for="date">Data de Nascimento:</label>
            <input type="date" id="date" name="date" />
            <br>
        
    <button type="submit">Cadastrar Cliente</button>
    </form>
</div>
</main>
<%- include('../partials/footer') %>
</body>
</html>