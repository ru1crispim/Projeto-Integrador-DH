<%- include('../partials/head') %>
<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/clientes/style-updateClients.css">;
<body>
    <div class="containerContent">
        <form action="/clientes/editar/<%= user.id %>?_method=PUT" method="POST">
            <div class="containerName">
                <label for="name">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%= user.nome %>" />
                <label for="lastname">Sobrenome:</label>
                <input type="text" id="sobrenome" name="sobrenome" />
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" />
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" />
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone" />
                <label for="birthday">Data de Nascimento:</label>
                <input type="date" id="date" name="date" />
                <div>
                    <button type="submit">Editar Dados</button>
                </div>
            </div>
        </form>
    </div>
<%- include('../partials/footer') %>
</body>
</html>